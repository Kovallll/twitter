{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es5",
        "types": ["vite/client", "node", "jest", "cypress"],
        "lib": ["dom", "dom.iterable", "es5"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "allowUmdGlobalAccess": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "@types": ["src/types"],
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@constants": ["src/constants"],
            "@styles": ["src/styles"],
            "@utils": ["src/utils"],
            "@hooks": ["src/hooks"],
            "@pages/*": ["src/pages/*"],
            "@store": ["src/store"],
            "@firebase": ["src/firebase"],
            "@mocks": ["src/mocks"]
        }
    },
    "include": ["src", "src/types/declare.d.ts", "firebase.config.ts"]
}
